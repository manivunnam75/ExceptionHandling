
@model ExceptionHandlingAssignment.Models.UserDetails
@{
    Layout = null;
}
    <title>Registration Form</title>
<link rel="stylesheet" href="/css/Registraion.css" />

    <h1>Registration Form</h1>
<div class="navigation">
    <button onclick="location.href='/Home/Index'">FileProcessing</button>
    <button onclick="location.href='/Home/Database'">Database</button>
    <button onclick="location.href='/Home/API'">API</button>

</div>
    <div class="form-container">
    <form method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" id="name" name="name" required>
              <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB">Date of Birth:</label>
                <input type="date" id="dob" name="dob" required>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label asp-for="City">Address:</label>
                <input type="text" id="address" name="address" required>
            <span asp-validation-for="City" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile">Contact Number:</label>
                <input type="tel" id="contact" name="contact" required>
            <span asp-validation-for="Mobile" style="color:red"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
           <div class="notes-container">
            <h3>Notes:</h3>
            <p>Provide accurate information in each field<br /> to avoid showing validation problems..</p>
        </div>
        </form>
    </div>
   





